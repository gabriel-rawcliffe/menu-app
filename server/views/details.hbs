<div class="puppy">
  {{>returnHome}}
  <img class="img-circle" src="{{image}}" alt="{{name}}">
  <h2>{{name}}</h2>
  <div>Author: {{author}}</div>
  <div>
    <p>Ingredients: </p>
    <ul>
      {{#each ingredients}}
        <li>{{ingredient}} -- {{amount}}</li>
      {{/each}}
    </ul>
  </div>
  <div>
    <p>Instructions:</p>
    <p>{{instructions}}</p>
  </div>
  <a href="/recipes/{{id}}/edit" class="link">Edit</a>
</div>
