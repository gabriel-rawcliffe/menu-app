<div class="puppy">
  <img class="img-circle" src="{{image}}" alt="{{name}}">
  <h2>{{name}}</h2>
  <div>Author: {{author}}</div>
  <div>
    <p>Ingredients: </p>
    <ul>
      {{#each ingredients}}
        {{>ingredient}}
      {{/each}}
    </ul>
  </div>
  <div>
    <p>Instructions:</p>
    <p>{{instructions}}</p>
  </div>
  <a href='/edit-recipe/{{id}}'>Edit</a>
</div>
